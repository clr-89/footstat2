{% extends 'base.html.twig' %}

{% block title %}Liste des matchs{% endblock %}

{% block body %}
    <div class="playerList container-fluid">
        <h1 class="mt-5 text-light text-center pb-3 m-5 border-bottom border-primary border-3 fs-1">Liste des matchs</h1>
        <table class="d-flex justify-content-center fs-2">
            <tr class="text-primary border-bottom border-primary">
                <th class="pe-3 py-2">Matchs</th>
                <th class="pe-3">Modifier</th>
            </tr>
            {% for game in games %}
                <tr class="bg-dark text-light border-bottom border-secondary fs-5">
                    <td class="w-50 pe-4 fs-4 py-2">{{ game.dateGame }}</td>
                    <td class="w-50 pe-2 text-center">
                        <a class="text-warning" href="{{ path('admin_edit_game', {'id': game.id}) }}"><i class="fas fa-user-edit"></i></a>
                    </td>
                </tr>
            {% endfor %}
        </table>
        <p class="mt-5 text-center">
            <a class="text-light fs-4" href="{{ path('admin_new_game') }}">Cr√©er un nouveau match<i class="ps-3 fas fa-user-plus"></i></a>
        </p>
    </div>

{% endblock %}
