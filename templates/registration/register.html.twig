{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}
    <div class="register mt-5 container-fluid ">
        <h1 class="mt-5 text-light text-center pb-3 m-5 border-bottom border-primary border-3 fs-1">Cr√©er un joueur</h1>
        <div class="d-flex justify-content-center">
            {{ form_start(registrationForm) }}
            <div class="col w-75 mx-auto">
                <div class="my-2 fs-4">{{ form_row(registrationForm.pseudo) }}</div>
                <div class="my-2 fs-4">{{ form_row(registrationForm.email) }}</div>
                <div class="my-2 fs-4">{{ form_row(registrationForm.plainPassword) }}</div>
                <div class="my-2 fs-4">{{ form_row(registrationForm.imageFile) }}</div>
                <div class="my-2 fs-4">{{ form_row(registrationForm.isVisible) }}</div>
                <button class="btn bg-light mt-5 me-4 fs-5 mx-auto" type="submit">Ajoute ce joueur</button>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
