
<form  method="post" action="{{ path('admin_delete_stats_player', { 'gameId': game.id, 'userId': user.id, 'statistiqueId' : statistique.id }) }}" class="text-light" onsubmit="return confirm('Attention !!! Vous allez supprimer les statistiques de ce joueur. Confirmez-vous la suppression ?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ statistique.id) }}">
