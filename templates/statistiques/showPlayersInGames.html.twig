{% extends 'base.html.twig' %}

{% block title %}Liste des joueurs{% endblock %}

{% block body %}

    <div class="playerList container-fluid">
        <h1 class="mt-5 text-light text-center pb-3 m-5 border-bottom border-primary border-3 fs-1">Modifier les statistiques du match du <span class="text-danger">{{ game.dateGame }}</span></h1>
        <table class="d-flex justify-content-center fs-2">
            <tr class="text-primary border-bottom border-primary">
                <th class="pe-3 py-2">Joueur</th>
                <th class="pe-3">PD</th>
                <th class="pe-3">Buts</th>
                <th class="pe-3">RÃ©sultat</th>
                <th class="pe-3">Modifier</th>
            </tr>
            {% for statistique in statistiques %}
            <tr class="bg-dark text-light border-bottom border-secondary fs-3">
                <td class="w-50 pe-4 fs-4 py-2">{{ statistique.user.pseudo }}</td>
                <td class="w-50 pe-4 fs-4 py-2">{{ statistique.buts }}</td>
                <td class="w-50 pe-4 fs-4 py-2">{{ statistique.passesDecisives }}</td>
                <td class="w-50 pe-4 fs-4 py-2">{{ statistique.resultat }}</td>
                <td class="w-50 pe-2 text-center">
                    <a class="text-warning" href="{{ path('admin_edit_stats_player', {'gameId': statistique.game.id, 'userId' : statistique.user.id, 'statistiqueId': statistique.id }) }}"><i class="fas fa-user-edit"></i></a>
                </td>
            </tr>
            {% endfor %}
        </table>
    </div>

{% endblock %}
